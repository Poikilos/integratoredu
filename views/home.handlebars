<!-- views/home.handlebars -->
{{#if user}}
	<div class="jumbotron">
	{{#groupContains "attendance" user.username}}
	<h1>Attendance</h1>
	If you are trying to sign students in or out, please login as <b>commute</b> user instead. Sorry for the inconvenience.
	{{/groupContains}}
	{{#groupContains "student-microevent" user.username}}
	
		{{#groupContains "care" user.username}}
		<h1>Extended Care</h1>
		{{#is_after_school}}
		<p>Sign students out below</p>
		{{else}}
		<p>Sign students in below</p>
		{{/is_after_school}}
		<br/>
		<form id="student-microevent" action="{{get_proxy_prefix_path}}student-microevent" method="post">
			<input type="hidden" name="transaction_type" value="care"/>
			<div class="form-group_notsobig">
				<label style="color:dimgray">Family ID (if applicable):</label>
				<input type="text" name="family_id" value="{{prefill_family_id}}"/>
			</div>
			<div class="form-group_notsobig">
				<label>Student First Name:</label>
				<input type="text" name="first_name" value="{{prefill_first_name}}"/>
			</div>
			<div class="form-group_notsobig">
				<label>Student Last Name:</label>
				<input type="text" name="last_name" value="{{prefill_last_name}}"/>
			</div>
			<div class="form-group_notsobig">
				<label>Grade:</label>
				<input type="text" name="grade_level" value="{{prefill_grade_level}}"/>
			</div>
			<div class="form-group_notsobig">
				<label>Pickup/Dropoff by:</label>
				<input type="text" name="chaperone" value="{{prefill_chaperone}}"/>
			</div>
			<div>
				<input type="submit" class="btn btn-primary btn-sm" value="Enter"/>
			</div>
			<div class="form-group_notsobig">
				<label style="color:dimgray">Time (blank for auto, else include AM/PM):</label>
				<input type="text" name="stated_time" value="{{prefill_stated_time}}"/>
			</div>
            <span style="color:dimgray">{{show_time}}</span>
		</form>
		{{/groupContains}}
		{{#groupContains "commute" user.username}}
		<h1>Student Commute</h1>
		<p>Sign students in or out of school below</p>
		<br/>
		<span style="color:dimgray">{{show_time}}</span>
		<form id="student-microevent" action="{{get_proxy_prefix_path}}student-microevent" method="post">
			<input type="hidden" name="transaction_type" value="commute"/>
			<div class="form-group_notsobig">
				<label>Student Name:</label>
				<input type="text" name="name" value="{{prefill_name}}"/>
				<label> &nbsp;Grade:</label>
				<input type="text" name="grade_level" value="{{prefill_grade_level}}"/>
			</div>
			<div class="form-group_notsobig">
                <input type="radio" name="heading" value="in"> arriving<br>
                <input type="radio" name="heading" value="out"> departing<br>
            </div>
			<div class="form-group_notsobig">
				<label>Reason:</label>
				<input type="text" name="reason" value="{{prefill_reason}}"/>
			</div>
			<div>
				<input type="submit" class="btn btn-primary btn-sm" value="Enter"/>
			</div>
			<div class="form-group_notsobig">
				<label>Custom Time:</label>
				<input type="text" name="stated_time" value="{{prefill_stated_time}}"/>
			</div>
			<div class="form-group_notsobig">
				<label>override pin:</label>
				<input type="password" name="pin" value=""/>
			</div>
		</form>
		{{/groupContains}}
	<br/>
        {{#groupContains "admin" user.username}}
        <div class="panel panel-default">
            <div class="panel-heading">
            <h3 class="panel-title">Student Commuting Records</h3>
            </div>
            <div class="panel-body">
            <p></p>
            <!--<p>Avatar: <img src="{{user.avatar}}"/></p>-->
            </div>
        </div>
        {{/groupContains}}
	{{/groupContains}}{{!--end student-microevent--}}
	</div><!--end jumbotron-->
	{{#groupContains "admin" user.username}}
	<div class="jumbotron">
		<h1>Administration</h1>
		<p>(not yet implemented)</p>
	</div>
	<br/>
	<div class="panel panel-default">
		<div class="panel-heading">
		<h3 class="panel-title">Profile</h3>
		</div>
		<div class="panel-body">
		<p>Username: {{user.username}}</p>
		<!--<p>Avatar: <img src="{{user.avatar}}"/></p>-->
		</div>
	</div>
	{{/groupContains}}
	{{#groupContains "accounting" user.username}}
	<div class="jumbotron">
		<h1>Accounting</h1>
		<p>Before/After School Care Data (not yet implemented)</p>
	</div>
	<br/>
	<div class="panel panel-default">
		<div class="panel-heading">
		<h3 class="panel-title">Profile</h3>
		</div>
		<div class="panel-body">
		<p>Username: {{user.username}}</p>
		<!--<p>Avatar: <img src="{{user.avatar}}"/></p>-->
		</div>
	</div>
	{{/groupContains}}
{{else}}
  <div class="jumbotron">
    <h1>User Authentication</h1>
    <p>Log in as known user to view and add information.</p>
    <p>
      <a href="{{get_proxy_prefix_path}}login" class="btn btn-primary btn-lg" role="button">
        <span class="glyphicon glyphicon-user"></span>
        Log In
      </a>
    </p>
  </div>
{{/if}}
